{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Default",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"composite": false,
		"forceConsistentCasingInFileNames": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext",
		"verbatimModuleSyntax": true
	},
	"exclude": ["node_modules"]
}
