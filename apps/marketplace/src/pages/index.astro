---
import Counter from 'src/common/components/counter/counter'
import CounterState from 'src/common/components/counter-state'
import CurrentUser from 'src/common/components/current-user.astro'
import BaseLayout from 'src/layouts/base.astro'
import Document from 'src/layouts/document.astro'

export const prerender = false
---

<Document title="Welcome">
	<BaseLayout>
		<h1 class="text-display-md">Welcome to Astro</h1>
		<CurrentUser />
		<a class="link" href="/about">About</a>
		<Counter client:load />
		<CounterState client:load />
	</BaseLayout>
</Document>
