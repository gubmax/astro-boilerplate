---
import RelaodApp from 'src/common/components/reload-app/reload-app.jsx'

import 'ui/styles/index.css'

export interface Props {
	title: string;
	description?: string;
	lang?: string;
}

const { title, description, lang='en' } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		{description && <meta name="description" content={description} />}
		<meta name="viewport" content="width=device-width" />
		<meta name="color-scheme" content="dark light" />
		<meta name="theme-color" media="(prefers-color-scheme: light)" content="#f9f9f9">
		<meta name="theme-color" media="(prefers-color-scheme: dark)"  content="#17181c">
		<meta name="turbo-cache-control" content="no-cache">
		<!-- <meta name="turbo-visit-control" content="reload"> -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<script>
      import '../router.ts'
    </script>
	</head>
	<body>
		<RelaodApp client:only>
			<slot />
		</RelaodApp>
	</body>
</html>

<style is:global>
	.turbo-progress-bar {
		height: 3px;
		background-color: var(--color-accent);
	}
</style>
