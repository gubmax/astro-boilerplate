{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["**/.env.*local"],
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", "!.astro/**"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"lint": {},
		"sb": { "cache": false },
		"sb.build": {
			"dependsOn": ["^sb.build"],
			"outputs": ["storybook-static/**"]
		}
	}
}
