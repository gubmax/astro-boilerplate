{
	"name": "astro-boilerplate",
	"private": true,
	"packageManager": "pnpm@8.6.0",
	"engines": {
		"node": ">=18.0.0",
		"pnpm": ">=8.6.0"
	},
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"codegen": "turbo run codegen",
		"lint": "turbo run lint",
		"sb": "FORCE_COLOR=1 turbo run sb",
		"sb.build": "turbo run sb.build",
		"format": "prettier --write **/*.{*js,ts*,md,json} && turbo run format",
		"prepare": "husky install"
	},
	"devDependencies": {
		"eslint": "8.53.0",
		"husky": "8.0.3",
		"npm-check-updates": "16.14.6",
		"prettier": "3.0.3",
		"turbo": "1.10.16",
		"typescript": "5.2.2"
	}
}
